{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "subject-case": [
            2,
            "always",
            "sentence-case"
        ],
        "header-max-length": [
            2,
            "always",
            72
        ],
        "body-max-line-length": [
            2,
            "always",
            72
        ],
        "type-enum": [
            2,
            "always",
            [
                "feature",
                "fix",
                "docs",
                "perf",
                "refactor",
                "test",
                "chore",
                "style",
                "revert"
            ]
        ]
    }
}